<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Loại bỏ .php từ URL
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^([a-zA-Z0-9_-]+)/?$ index.php?page=$1 [QSA,L]
</IfModule>

# Cấm truy cập trực tiếp vào thư mục includes
<IfModule mod_rewrite.c>
    RewriteRule ^includes/ - [F,L]
</IfModule>
